.main
  .main__group
    .main__group__left
      .main__group__left__name
        = @group.name
      .main__group__left__member
        Member:
        - @group.users.each do |user|
          = user.name
    .main__group__right
      = link_to "edit", class: "edit" do
        Edit  
  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      .form_message
        = f.text_field :content, class: 'form__message__text', placeholder: 'type a message'
        .form__message__mask
          = f.label :image, class: 'form__message__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'form__message__mask__image__hidden'
        = f.submit 'Send', class: 'form__message__submit'